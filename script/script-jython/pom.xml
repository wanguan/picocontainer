<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.picocontainer.script</groupId><artifactId>picocontainer-script</artifactId><version>3.0-SNAPSHOT</version>
    </parent>
    <artifactId>picocontainer-script-jython</artifactId>
    <name>PicoContainer Script Jython</name>
    <packaging>jar</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId><artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <systemProperties>
                        <property>
                            <name>python.cachedir</name>
                            <value>${project.build.outputDirectory}/cachedir</value>
                        </property>
                        <property>
                            <name>testcomp.jar</name>
                            <value>${basedir}/../script-core/src/test-comp/TestComp.jar</value>
                        </property>
                    </systemProperties>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>com.picocontainer.script</groupId><artifactId>picocontainer-script-core</artifactId><version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.python</groupId><artifactId>jython</artifactId><version>2.7-b1</version>
        </dependency>
        <dependency>
            <groupId>commons-cli</groupId><artifactId>commons-cli</artifactId><version>1.2</version>
        </dependency>
        <!-- test scoped dependencies -->
        <dependency>
            <groupId>com.picocontainer.script</groupId><artifactId>picocontainer-script-tck</artifactId><version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.picocontainer.script</groupId><artifactId>picocontainer-script-testmodel</artifactId><version>${project.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>